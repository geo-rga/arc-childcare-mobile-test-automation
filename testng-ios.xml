<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="iOS Suite" parallel="false" thread-count="1">

    <!-- TODO: Update build path and udid -->
    <!-- TODO: Update fullReset to "true" to run each test from a fresh install-->
    <test name="iOS Tests">
        <parameter name="platform" value="ios"/>

        <!-- TODO: Add path to app file and the build number when testing locally-->
        <parameter name="build" value="src/test/resources/apps/ios/ios_blood_2278.ipa"/>
        <parameter name="buildNumber" value="2244"/>

        <!-- TODO: To get the iOS device udid, run the following in the terminal: xcrun xctrace list devices. Set to "auto" to run on a simulator-->
        <parameter name="deviceName" value="iPhone 12"/>
        <parameter name="platformVersion" value="18.3.1"/>
        <parameter name="udid" value="00008101-000E49EA1081401E"/>
        <parameter name="fullReset" value="true"/>

        <!-- TODO: Add correct environment when testing locally-->
        <parameter name="env" value="staging"/>
        <parameter name="isSimulator" value="false"/>

        <!-- TODO: Select the tests to be ran here -->
        <groups>
            <run>
                <include name="wip"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.WelcomeScreenTest"/>
            <class name="tests.CreateAccountTest"/>
            <class name="tests.ScheduleAppointmentTest"/>
        </classes>
    </test>
</suite>
